<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@color/colorPrimary"

    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/more_work_spaces"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="@dimen/sixteen_dp"
        android:layout_marginLeft="@dimen/sixteen_dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="15dp"
        android:contentDescription="TODO"
        app:srcCompat="@drawable/ic_more_black_24dp" />

    <RelativeLayout
        android:id="@+id/login_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/more_work_spaces"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/org_profile_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/eight_dp"
            android:layout_marginLeft="@dimen/eight_dp"

            android:layout_above="@id/org_name_view"

            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/org_name_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/eight_dp"
            android:layout_marginTop="@dimen/eight_dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/eight_dp"
            android:layout_marginBottom="@dimen/sixteen_dp"
            android:hint="Android Works"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />


    </RelativeLayout>
</RelativeLayout>